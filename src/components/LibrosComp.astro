---
import type {Libro} from '../components/types/Types.ts'


const { titulo, autor, imagen_url, descripcion } = Astro.props as Libro;
---

<div
  class="border-2 border-slate-500 hover:bg-slate-800 hover:transition-all hover:duration-700 hover:animate-pulse text-white"
>
  <a href=`/${titulo}`>
    <h1 class="text-3xl font-bold m-2">{titulo}</h1>
    <h3 class="text-xl">Autor: {autor}</h3>
    <img class="w-40 mx-auto m-5" src={imagen_url} alt={titulo} />
    <p class="text-left m-5">{descripcion}</p>
  </a>
</div>