---


import librosData from "../Libros.json";
import Layout from '../layouts/Layout.astro'
import type { Libro } from '../types/Types';

const {titulo} = Astro.params

const libros: Libro[] = librosData.libros;



const libroselect : Libro|undefined = libros.find((lib)=>lib.titulo===titulo)
export const prerender="false"
if(!libroselect){
    return
}
---

<Layout title=`Libro ${titulo}` >
    <div class="justify-center text-center align-middle text-white">
        <h1 class="text-5xl m-5 border-y-2 py-4 bg-slate-800">{libroselect.titulo}</h1>
        <h3 class="text-3xl font-normal ">{libroselect.autor}</h3>
        <img  class="border-2 mx-auto m-5 w-[300px]" src={libroselect.imagen_url}/>
        <p class="text-center mx-20 ">{libroselect.descripcion}</p>
    </div>
</Layout>